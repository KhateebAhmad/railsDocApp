<%= search_form_for @search do |f| %>

  # Search if the name field contains...
  <%= f.label :name_cont %>
  <%= f.search_field :name_cont %>

  <%= f.submit %>
<% end %>

<% if @patients.blank? %>
<p>There are no patients in the system currently.</p>
<% else %>
<p>These are the current patients in the system</p>

<ul id = "patients">
   <% @patients.each do |c| %>
   <li><%= link_to c.name, {:action => 'show', :id => c.id} -%><%= c.dateofbirth -%><%= c.address -%><%= c.phonenumber -%><%= c.injury -%><%= c.requestscan -%><%= c.typeofscan -%>
    <b> <%= link_to 'Edit', {:action => "edit", :id => c.id} %></b>
    <b> <%= link_to "Delete", {:action => 'delete', :id => c.id}, :confirm => "Are you sure you want to delete this record?" %></b>
   </li>
   <% end %>
</ul>

<% end %>
<p><%= link_to "Add new Patient", {:action => 'new' }%></p>