<%= search_form_for @search do |f| %>

  <%= f.label :name_cont %>
  <%= f.search_field :name_cont %>

  <%= f.submit %>
<% end %>

<% if @patients.blank? %>
<p>There are no patients in the system currently.</p>
<% else %>
<p>These are the current patients in the system</p>



<table class="table">
  <tr>
    <th>Name</th>
    <th >Date of Birth</th>
    <th >Address</th>
    <th >Phone Number</th>
    <th >Issue/Injury</th>
    <th >Scan Requested</th>
    <th >Type of Scan</th>
    <th >Show</th>
    <th >Edit</th>
    <th >Delete</th>

  </tr>
  <% @patients.each do |patient| %>
  <tr>
    <td ><%= patient.name -%></td>
    <td ><%= patient.dateofbirth -%></td>
    <td ><%= patient.address -%></td>
    <td ><%= patient.phonenumber -%></td>
    <td ><%= patient.injury -%></td>
    <td ><%= patient.requestscan -%></td>
    <td><%= patient.typeofscan -%></td>
    <td><%= link_to 'Show', {:action => "show", :id => patient.id}, class: "btn btn-primary" %></td>
    <td><%= link_to 'Edit', {:action => "edit", :id => patient.id}, class: "btn btn-primary" %></td>
    <td><%= link_to 'Delete', {:action => 'delete', :id => patient.id}, class: "btn btn-primary", confirm: "Are you sure you want to delete this record?" %></td>
  </tr>
  <% end %>
</table>

<% end %>