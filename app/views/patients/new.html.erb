<h3>Add new patient</h3>

<br>

<%= form_tag :action => 'create', :class => 'form-horizontal' do %>

<div class="form-group">
<label for = "patient_name" class="control-label col-sm-1">Name:</label>
<div class="col-sm-3">
<%= text_field 'patients', 'name', :class => 'form-control' %>
</div>
</div>

<br>
<br>
<br>

<div class="form-group">
<label for = "patient_dateofbirth" class="control-label col-sm-1">Date of Birth:</label>
<div class="col-sm-3">
<%= date_field 'patients', 'dateofbirth', :class => 'form-control' %>
</div>
</div>

<br>
<br>

<div class="form-group">
<label for = "patient_address" class="control-label col-sm-1">Address:</label>
<div class="col-sm-3">
<%= text_area 'patients', 'address', :class => 'form-control' %>
</div>
</div>

<br>
<br>
<br>

<div class="form-group">
<label for = "patient_phonenumber" class="control-label col-sm-1">Phone Number:</label>
<div class="col-sm-3">
<%= number_field 'patients', 'phonenumber', :class => 'form-control' %>
</div>
</div>

<br>
<br>

<div class="form-group">
<label for = "patient_injury" class="control-label col-sm-1">Injury:</label>
<div class="col-sm-3">
<%= text_area 'patients', 'injury', :class => 'form-control' %>
</div>
</div>

<br>
<br>
<br>

<div class="form-group">
<label for = "patient_requestscan" class="control-label col-sm-1">Request Scan:</label>
<div class="col-sm-3">
<%= text_field 'patients', 'requestscan', :class => 'form-control' %>
</div>
</div>

<br>
<br>

<div class="form-group">
<label for = "patient_typeofscan" class="control-label col-sm-1">Type of scan:</label>
<div class="col-sm-3">
<%= text_field 'patients', 'typeofscan', :class => 'form-control' %>
</div>
</div>

<br>
<br>

<div class="form-group">
<div class="col-sm-offset-2 col-sm-10">
<%= submit_tag "Create", :class => 'btn btn-primary'%>
</div>
</div>

<% end -%>